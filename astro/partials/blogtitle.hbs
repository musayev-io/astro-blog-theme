{{! Partial: Blog Title }}

<div class="blogtitle">
    {{#if @blog.logo}}
        <a class="blogtitle-logo" href="{{@blog.url}}">
            <img src="{{@blog.logo}}" alt="{{@blog.title}}"/>
        </a>
    {{else}}
        <h1 class="blogtitle-header"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
    {{/if}}
</div>
